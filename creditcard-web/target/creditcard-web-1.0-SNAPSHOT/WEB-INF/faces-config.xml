<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>pagoMBean</managed-bean-name>
        <managed-bean-class>com.udea.controller.PagoMBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <validator>
        <validator-id>idTarjetaValidator</validator-id>
        <validator-class>net.viralpatel.jsf.helloworld.EmailValidator</validator-class>
    </validator>
    <navigation-rule>
        <from-view-id>/PagoList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>DETAILS</from-outcome>
            <to-view-id>/PagoDetail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PAGO</from-outcome>
            <to-view-id>/Pagos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/PagoDetail.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>LIST</from-outcome>
            <to-view-id>/PagoList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Pagos.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>SAVED</from-outcome>
            <to-view-id>/PagoList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LIST</from-outcome>
            <to-view-id>/PagoList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>

